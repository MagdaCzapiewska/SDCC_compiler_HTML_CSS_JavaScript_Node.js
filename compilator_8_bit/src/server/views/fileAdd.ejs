<form method="POST" enctype="multipart/form-data" class="form" action="/folder/<%= id %>/add-file" id="add_file_form">
        <div class="form-control">
            <label for="id_description">Description:</label>
            <textarea name="description" cols="40" rows="5" maxlength="1000" id="id_description"></textarea>
        </div>
        <div class="form-control">
            <label for="id_source_code_file">Source code file:</label>
            <input type="file" name="source_code_file" required="" id="id_source_code_file">
        </div>
    <button type="button" onclick="return submitAddFile();">Add file</button>
</form>

